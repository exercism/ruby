require 'minitest/autorun'
require_relative 'collatz_conjecture'

class CollatzConjectureTest < Minitest::Test
<% json["cases"].each do |cases| %>
    def test_<%= underscore(cases["description"]) %>
        <%= skip? %> 
        <%- if cases["expected"].is_a?(Hash) && cases["expected"].key?("error") -%>
        assert_raises(ArgumentError) do
            CollatzConjecture.steps(<%= cases["input"]["number"] %>)
        end
        <%- else -%>
            assert_equal <%= cases["expected"] %>, CollatzConjecture.steps(<%= cases["input"]["number"] %>)
        <%- end -%>
    end
<% end %>
end
