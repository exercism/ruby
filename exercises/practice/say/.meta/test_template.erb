require 'minitest/autorun'
require_relative 'say'

class SayTest < Minitest::Test
<% json["cases"].each do |cases| %>
    def test_<%= underscore(cases["description"]) %>
        <%= skip? %>
        <%- if cases["expected"].is_a?(Hash) && cases["expected"].key?("error") -%>
            number = <%= cases["input"]["number"] %>
            assert_raises(ArgumentError) do
                Say.new(number).in_english
            end
        <%- else -%>
            actual = Say.new(<%= cases["input"]["number"] %>).in_english
            expected = '<%= cases["expected"] %>'
            assert_equal expected, actual
        <%- end -%>
    end
    <% end %>
end
