require 'minitest/autorun'
require_relative 'pangram'

class PangramTest < Minitest::Test
<% json["cases"].each do |cases| %>
    def test_<%= underscore(cases["description"]) %>
        <%= skip? %>
        sentence = '<%= cases["input"]["sentence"] %>'
        result = Pangram.pangram?(sentence)
        <%= cases["expected"] ? "assert" : "refute" %> result, "Expected <%= cases["expected"] %>, got: #{result.inspect}. #{sentence.inspect} is<%= cases["expected"] ? "" : " not" %> a pangram"
    end
<% end %>
end
