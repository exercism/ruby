require 'minitest/autorun'
require_relative 'isogram'

class IsogramTest < Minitest::Test
<% json["cases"].each do |cases| %>
    def test_<%= underscore(cases["description"]) %>
      <%= skip? %>
      input = '<%= cases["input"]["phrase"] %>'
      <%= cases["expected"] ? "assert" : "refute" %> Isogram.isogram?(input), "Expected <%= cases["expected"] %>, '#{input}' is<%= cases["expected"] ? "" : " not" %> an isogram"
    end
    <% end %>
end
